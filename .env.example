# Configuración del Historic Server
# Copia este archivo a .env y ajusta los valores según tu entorno

# Modo de procesamiento: 'real' para producción, 'simulator' para pruebas
PROCESSOR_MODE=real

# Ruta a la base de datos SQLite
DB_PATH=consultas_goes.db

# Ruta al almacenamiento principal (Lustre)
SOURCE_PATH=/depot/goes16

# Directorio para archivos descargados/comprimidos
DOWNLOAD_PATH=/data/tmp

# Número de workers paralelos para I/O
MAX_WORKERS=8

# Habilitar/deshabilitar fallback a S3
S3_FALLBACK_ENABLED=True

# Habilitar/deshabilitar uso de Lustre
LUSTRE_ENABLED=True

# Timeout de procesamiento por archivo (segundos)
FILE_PROCESSING_TIMEOUT_SECONDS=120

# Límites de consulta (0 = sin límite)
MAX_FILES_PER_QUERY=0
MAX_SIZE_MB_PER_QUERY=0

# Buffer de espacio libre en disco (GB)
MIN_FREE_SPACE_GB_BUFFER=10

# API Key opcional para seguridad de endpoints
# Descomenta y configura si quieres proteger la API
# API_KEY=tu_clave_secreta_muy_segura_aqui

# === Configuración S3 ===
S3_RETRY_ATTEMPTS=3
S3_RETRY_BACKOFF_SECONDS=1.0
S3_CONNECT_TIMEOUT=5
S3_READ_TIMEOUT=30
S3_PROGRESS_STEP=100

# === Configuración de Simulador (solo para desarrollo) ===
# Tasa de éxito en modo simulador
SIM_LOCAL_SUCCESS_RATE=0.8
SIM_S3_SUCCESS_RATE=0.5
